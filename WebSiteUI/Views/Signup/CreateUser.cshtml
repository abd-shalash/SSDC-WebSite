@model WebSiteUI.Models.CreateUserModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="panel panel-default">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <label>User Name:</label>
            @Html.TextBoxFor(u=>u.Username, new  { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>User password:</label>
            @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>User first Name:</label>
            @Html.TextBoxFor(u => u.Fname, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>User MName:</label>
            @Html.TextBoxFor(u => u.Mname, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>User Last Name:</label>
            @Html.TextBoxFor(u => u.Lname, new { @class = "form-control" })
        </div>
        <input type="submit" value="CreateUser" class="btn btn-primary" />
    }
</div>