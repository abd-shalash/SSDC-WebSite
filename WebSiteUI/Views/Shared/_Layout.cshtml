<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SSDC - @ViewBag.Title</title>

    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />*@

    <link href="~/Content/stylesheet.css" rel="stylesheet" />
    <link href="~/Content/stylesheet_home.css" rel="stylesheet" />
    <link href="~/Content/SSDCStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link type="text/css" href="https://www.google.com/uds/api/search/1.0/8bdfc79787aa2b2b1ac464140255872c/default+en.css" rel="stylesheet">
    <link type="text/css" href="https://www.google.com/cse/style/look/v2/default.css" rel="stylesheet">
</head>

<body>
    @using ClassLibrary.Concrate
    @using SSDC_WebSite.Models
    @{
        EF_DBContext repo = new EF_DBContext();
    }

    <!--Header-->
    <div class="page-wrapper" id="sim">
        <!--Banner-->
        <header>

            <div class="container">

                <div class="row">

                    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                        <h1 id="logo">
                            <a href="@Url.Action("Index", "Home")"> @*<img src="~/Assests/Icon/logo.jpg" alt="Simulation and Skill Development Center" title="SSDC" />*@ </a>
                        </h1>
                    </div>

                    <div class="col-lg-5 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-12 col-xs-12">

                        <nav class="navbar navbar-sim col-lg-12 col-md-12 col-sm-12 col-xs-12" id="secondary">

                            <ul class="nav navbar-nav">

                                @if (Session["user"] == null)
                                {
                                    <li>
                                        <i class="fa fa-user-plus"></i>
                                        <a href="@Url.Action("CreateUser", "SignUp")"> Sign Up</a>
                                    </li>
                                    <li>
                                        <i class="fa fa-sign-in"></i>
                                        <a href="@Url.Action("Login", "Account")"> Login </a>
                                    </li>
                                }
                                @if (Session["user"] != null)
                                {
                                    if ((string)Session["user"] == "admin")
                                    {
                                        <li>
                                            <i class="fa fa-cogs"></i>
                                            <a href="@Url.Action("Index", "Admin")"> Signed In As: @Session["user"] </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <i class="fa fa-user "></i>
                                            <a href="@Url.Action("Index", "User")"> Signed In As: @Session["user"] </a>
                                        </li>
                                    }
                                    <li>
                                        <i class="fa fa-sign-out"></i>
                                        <a href="@Url.Action("Logout", "Account")"> Logout </a>
                                    </li>
                                 }

                            </ul>

                        </nav>

                    </div>

                </div>

            </div>

        </header>

        <!--Navbar-->
        <nav class="navbar navbar-sim affix-top" id="primary" role="navigation">

            <div class="container">

                <div class="row">

                    <!--Collapsed icons-->
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <span id="navbar-header-title" class="hidden-lg hidden-md hidden-sm">Menu</span>

                    </div>

                    <!--Navbar items-->
                    <div class="collapse navbar-collapse" id="main-navbar-collapse">

                        <ul class="nav navbar-nav col-lg-12 col-md-12 col-sm-12 col-xs-12" role="menu">

                            <li>
                                <a href="@Url.Action("Index", "Home")">Home</a>
                            </li>

                            <li>
                                <a href="#">Simulation</a>
                            </li>

                            <li>
                                <a href="#">Life Support</a>
                            </li>

                            <li>
                                <a href="#">News</a>
                            </li>

                            <li>
                                <a href="#">About</a>
                            </li>

                        </ul>

                    </div>

                </div>

            </div>

        </nav>

    </div>

    <!--Footer-->
    @RenderBody()
    <footer id="sim-footer">

        <div class="container">

            <div class="row">
                <!--Navigation-->
                <div class="col-lg-3 col-md-3 col-sm-5 col-xs-6 col-lg-offset-2 col-md-offset-2 col-lg-push-3 col-md-push-3" id="sim-footer-nav">

                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                            <h4>Navigate</h4>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                                <ul role="menu" class="dropdown">

                                    <li role="menuitem">
                                        <a href="@Url.Action("Index", "Home")">Home</a>
                                    </li>

                                    <li role="menuitem">
                                        <a href="#">Simulation</a>
                                    </li>

                                    <li role="menuitem">
                                        <a href="#">Life Support</a>
                                    </li>

                                    <li role="menuitem">
                                        <a href="#">Events</a>
                                    </li>

                                    <li role="menuitem">
                                        <a href="#">About</a>
                                    </li>

                                </ul>

                            </div>

                        </div>

                    </div>

                </div>

                <!--Navigate List-->
                <div class="col-lg-3 col-md-3 col-sm-5 col-xs-6 col-lg-offset-1 col-md-offset-1 col-sm-offset-2 col-lg-push-3 col-md-push-3" id="sim-quicklinks">

                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                            <h4>Quicklinks</h4>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                                <ul class="dropdown">

                                    <li role="menuitem">
                                        <a href="/tour">Tour Request</a>
                                    </li>

                                    <li role="menuitem">
                                        <a href="/give">Donation</a>
                                    </li>

                                </ul>

                            </div>

                        </div>

                    </div>

                </div>

                <!--Footer Information-->
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 col-lg-pull-9 col-md-pull-9" id="sim-info">

                    <a href="@Url.Action("Index", "Home")"> <img src="~/Assests/Icon/logo.jpg" alt="Simulation and Skill Development Center" title="SSDC" /> </a>

                    <address>
                        PNU - SSDC <br />
                        Postal Code: 11671 <br />
                        P.O.Box: 84428 <br />
                        kaauh-ssdc@pnu.edu.sa <br />
                    </address>

                    <p>Sign up for newsletters</p>

                    <div class="w-form newsletter-form">
                        <form id="wf-form-newsletter" name="wf-form-newsletter" data-name="Newsletter" class="w-clearfix">
                            <input id="email" type="email" placeholder="Email" name="email" data-name="Email" required="required" class="w-input newsletter-field">
                            <input type="submit" value="Signup" data-wait="Wait..." wait="Wait..." class="w-button newsletter-button">
                        </form>

                        <div class="w-form-done success-message">
                            <p>Thank you! You’ll receive an email shortly.</p>
                        </div>

                        <div class="w-form-fail">
                            <p>Oops! Something went wrong while submitting the form :(</p>
                        </div>

                    </div>

                </div>

                <!--Newsletter-->


            </div>

        </div>

    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>

</html>