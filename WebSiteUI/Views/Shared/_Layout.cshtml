<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - </title>

    <link href="~/Content/MyStyle.css" rel="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>

<body>

    <nav class="navbar navbar-default navbar-fixed-top">

        <div class="container">

            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"> <img src="~/Content/img/logo.png" /> </a>
            </div>

            <!--/.nav-collapse -->
            <div id="navbar" class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    <li> <a href="@Url.Action("FacilityListView", "Facility")">    Facility            </a> </li>
                    <li> <a href="@Url.Action("EventListView", "Event")">          Events              </a> </li>
                    <li> <a href="map" )>                                            Map                 </a> </li>
                    <li> <a href="calendar" )>                                       Calendar            </a> </li>

                    @if (Session["user"] == null)
                    {
                        <li class="active"> <a href="@Url.Action("CreateUser", "SignUp")">     Sign Up     </a> </li>
                        <li class="active"> <a href="@Url.Action("Login", "Account")">          Login       </a> </li>
                    }
                    @if (Session["user"] != null)
                    {
                        <li class="active"> <a href="@Url.Action("Logout", "Account")">                 @Session["user"]    </a> </li>
                        <li class="active"> <a href="@Url.Action("AdminOrganizationIndex", "Admin")">   Admin               </a> </li>
                    }

                </ul>

            </div>

        </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div id="footer" class="w-section section footer">
            <div class="w-container">
                <div class="w-row">
                    <div class="w-col w-col-6">
                        <div class="footer-title">Princess Noura University</div>
                        <div class="logo-text footer">Simulation &amp; Skills Development Center</div>
                        <div class="footer-slogan">Sign up for our newsletter</div>
                        <div class="w-form newsletter-form">
                            <form id="wf-form-newsletter" name="wf-form-newsletter" data-name="Newsletter" class="w-clearfix">
                                <input id="email" type="email" placeholder="Email Address" name="email" data-name="Email" required="required" class="w-input newsletter-field">
                                <input type="submit" value="Subscribe" data-wait="Wait..." wait="Wait..." class="w-button newsletter-button">
                            </form>
                            <div class="w-form-done success-message">
                                <p>Thank you! You’ll receive an email shortly.</p>
                            </div>
                            <div class="w-form-fail">
                                <p>Oops! Something went wrong while submitting the form :(</p>
                            </div>
                        </div>
                        <div class="social-icon-group">
                            <a href="#" class="w-inline-block social-icon">
                                <img src="~/Static/images/facebook-icon.svg" class="nav-link">
                            </a>
                            <a href="#" class="w-inline-block social-icon">
                                <img src="~/Static/images/twitter-icon.svg" class="nav-link">
                            </a>
                            <a href="#" class="w-inline-block social-icon">
                                <img src="~/Static/images/email-icon-white.svg" class="nav-link">
                            </a>
                        </div>
                    </div>
                    <div class="w-col w-col-6">
                        <div>
                            Email
                            <br>kaauh-simulation@pnu.edu.sa
                            <br>Telephone
                            <br>+966 11 8239733
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>