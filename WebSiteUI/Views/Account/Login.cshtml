@model WebSiteUI.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<section id="content-body">
    <div class="container">
        <div class="container">
            <div class="row">
                <div id="login-block" class="col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-1 col-lg-6 col-md-6 col-sm-8 col-xs-10">
                    <h2 class="text-center">SSDC Simulation Center</h2>
                    <h3 class="text-center">Login to your account</h3>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>Log In</h3>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary()
                                <div class="form-group">
                                    <div class="left-inner-addon">
                                        <label>Email</label>
                                        @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="left-inner-addon">
                                        <label>Password</label>
                                        @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8 col-lg-offset-2">
                                        <input type="submit" value="Login" class="btn btn-primary btn-lg btn-block" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>