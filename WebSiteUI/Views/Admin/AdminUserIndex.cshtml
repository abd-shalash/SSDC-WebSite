@model IEnumerable<SSDC_WebSite.Models.user>

@{
    ViewBag.Title = "AdminUserIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminUserIndex</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="alert-info">List Of All Users</span>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                   first name
                </th>
                <th>
                   last name 
                </th>
                <th>
                     email
                </th>
                <th>
                     work number
                </th>
                <th>
                    mobile number
                </th>
                <th>
                     gender
                </th>
                <th>
                    id number
                </th>
                <th>
                   password
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.first_name
                    </td>
                    <td>
                        @item.last_name
                    </td>
                    <td>
                        @*@item.email*@
                         @item.email
                    </td>
                    <td>
                         @item.work_number
                    </td>
                    <td>
                        @item.mobile_number
                    </td>
                    <td>
                         @item.gender
                    </td>
                    <td>
                        @item.id_number
                    </td>
                    <td>
                        @item.password
                    </td>
      
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.user_id }) 
                        @Html.ActionLink("Details", "DetailsUser", new { id = item.user_id }) 
                        @*@Html.ActionLink("Delete", "DeleteUser", new { id = item.user_id })*@

                        

                        @using (Html.BeginForm("DeleteUser", "Admin"))
                        {
                            @Html.Hidden("user_id", item.user_id)
                            <input type="submit" class="btn btn-default btn-xs" value="DeleteUser"/>
                        }
                  
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Create New User", "CreateUser",null,new { @class = "btn btn-default"})
    </div>
</div>

