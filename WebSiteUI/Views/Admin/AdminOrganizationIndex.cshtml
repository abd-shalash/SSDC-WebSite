@model IEnumerable<SSDC_WebSite.Models.organization>

@{
    ViewBag.Title = "AdminOrganizationIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">AdminOrganizationIndex</div>

    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>
                <lable>Orgnization Name</lable> 
             </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.organization_name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditOrganization", new { id = item.organization_id }) |
                    @Html.ActionLink("Details", "DetailsOrganization", new { id = item.organization_id }) |
                    @Html.ActionLink("Delete", "DeleteOrganization", new { id = item.organization_id })
                </td>
            </tr>
        }

    </table>

    <div class="panel-footer">
        @Html.ActionLink("Create New", "CreateOrganization")
    </div>
</div>