@model IEnumerable<SSDC_WebSite.Models.organization>

@{
    ViewBag.Title = "AdminOrganizationIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminOrganizationIndex</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="alert-info">List Of All Organizations</span>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">


            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.organization_name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.organization_name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.organization_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.organization_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.organization_id })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <div class="btn btn-default">
            @Html.ActionLink("Create New", "Create")
            
            </div>
        </div>
    </div>