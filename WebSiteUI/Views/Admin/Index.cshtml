@model IEnumerable<SSDC_WebSite.Models.Operation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel-heading">
    <h2>Index</h2>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.operation_name)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.operation_name)
                        </td>
                        <td>
                            @Html.ActionLink("Admin", item.operation_name, new { id = item.operation_id })
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div class="panel-footer">
            <div class="btn btn-default">
                @Html.ActionLink("Create New", "Create")
            </div>
        </div>
    </div>
