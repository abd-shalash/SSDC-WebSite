@model IEnumerable<SSDC_WebSite.Models.operation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="panel panel-default" >
<h2 class="panel panel-heading">list of admin operations</h2>

<div class="panel-body">
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.operation_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.operation_name)
        </td>
        <td>
            @Html.ActionLink("Admin", item.operation_name, new { id=item.operation_id }) |

        </td>
    </tr>
}
   
</table>
 </div>
<div class="panel-footer">
    @Html.ActionLink("Create New", "Create")
</div>
</div>