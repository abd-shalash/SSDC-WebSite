@model IEnumerable<SSDC_WebSite.Models.booking>

@{
    ViewBag.Title = "AdminBookingIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminBookingIndex</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="alert-info">List Of All Bookings</span>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            
            
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.booking_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.start_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.end_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.topic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.no_of_participant)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.code_no)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.booking_status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.meeting_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dryrun_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.notes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.event_type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.staff_needed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.additional_requirement)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.booking_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.start_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.end_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.topic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.no_of_participant)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.code_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.booking_status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.meeting_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dryrun_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.event_type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.staff_needed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.additional_requirement)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.booking_id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.booking_id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.booking_id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    <div class="panel-footer">
        <div class="btn btn-default">

            @Html.ActionLink("Create New", "Create")
        </div>
    </div>


    </div>