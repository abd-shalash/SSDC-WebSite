@model IEnumerable<SSDC_WebSite.Models.booking>

@{
    ViewBag.Title = "AdminBookingIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminBookingIndex</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="alert-info">List Of All Bookings</span>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            
            

            <tr>
                <th>
                    <lable> Booking Date </lable>
                </th>
                <th>
                    <lable> Start Date </lable>
                </th>
                <th>
                    <lable> End Date </lable>
                </th>
                <th>
                    <lable> Topic </lable>
                </th>
                <th>
                    <lable> Number of participants </lable>
                </th>
                <th>
                    <lable> Code.No
                </th>
                <th>
                    <lable> Booking Status </lable>
                </th>
                <th>
                    <lable> Meeting Date </lable>
                </th>
                <th>
                    <lable> Run Date </lable>
                </th>
                <th>
                    <lable> Notes </lable>
                </th>
                <th>
                    <Lable> Event Type </Lable>
                </th>
                <th>
                    <lable> Staff Needed </lable>
                </th>
                <th>
                    <lable> Additional Requirment </lable>
                </th>
                <th></th>
            </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.booking_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.start_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.end_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.topic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.no_of_participant)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.code_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.booking_status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.meeting_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dryrun_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.event_type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.staff_needed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.additional_requirement)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditBooking", new { id = item.booking_id }) |
                            @Html.ActionLink("Details", "DetailsBooking", new { id = item.booking_id }) |
                            @Html.ActionLink("Delete", "DeleteBooking", new { id = item.booking_id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    <div class="panel-footer">
        <div class="btn btn-default">

            @Html.ActionLink("Create New", "CreateBooking")
        </div>
    </div>


    </div>