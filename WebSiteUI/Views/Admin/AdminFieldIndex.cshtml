@model IEnumerable<SSDC_WebSite.Models.field>

@{
    ViewBag.Title = "AdminFieldIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminFieldIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.field_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.field_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.field_desc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.field_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.field_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.field_desc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.field_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.field_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.field_id })
        </td>
    </tr>
}

</table>
